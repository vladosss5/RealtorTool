<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:RealtorTool.Desktop.ViewModels.Pages"
             xmlns:converters="clr-namespace:RealtorTool.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RealtorTool.Desktop.Views.Pages.ApplicationsPageView"
             x:DataType="pages:ApplicationsPageViewModel">
    
    <Design.DataContext>
        <pages:ApplicationsPageViewModel/>
    </Design.DataContext>
    
    <UserControl.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        <converters:ObjectIsNotNullConverter x:Key="ObjectIsNotNullConverter"/>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Border.default-image">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <ListBox ItemsSource="{Binding Listings}" 
             SelectedItem="{Binding SelectedListing}"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             Background="Transparent"
             BorderThickness="0"
             Margin="10">
        
        <ListBox.Styles>
            <Style Selector="ListBoxItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            <Style Selector="ListBoxItem:pointerover">
                <Setter Property="Background" Value="#F5F5F5"/>
            </Style>
            <Style Selector="ListBoxItem:selected">
                <Setter Property="Background" Value="#E3F2FD"/>
            </Style>
        </ListBox.Styles>
    
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="15" 
                        Background="White">
                    
                    <Border.Styles>
                        <Style Selector="Border:pointerover">
                            <Setter Property="BorderBrush" Value="#2196F3"/>
                        </Style>
                    </Border.Styles>
                    
                    <Grid ColumnDefinitions="80,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15">
                        
                        <!-- Колонка 0: Главное изображение -->
                        <Border Grid.Column="0" Grid.RowSpan="3"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0"
                                Width="70" 
                                Height="70"
                                Background="#F5F5F5">
                            
                            <Panel>
                                
                                <!-- Плейсхолдер (всегда на заднем плане) -->
                                <Border Background="#F5F5F5"
                                        CornerRadius="4">
                                    <TextBlock Text="🏠"
                                               FontSize="24"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Opacity="0.3"/>
                                </Border>
                                
                                <!-- Изображение (перекрывает плейсхолдер когда есть) -->
                                <Image Source="{Binding MainImage}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasImage}"/>
                                
                            </Panel>
                        </Border>
                        
                        <!-- Колонка 1: Основная информация -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Listing.ListingType.Value}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Foreground="#1976D2"/>
                            
                            <Border Background="{Binding Listing.Status.Value, Converter={StaticResource StatusToColorConverter}}"
                                    CornerRadius="4" 
                                    Padding="6,2"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Listing.Status.Value}" 
                                           FontSize="11"
                                           FontWeight="Medium"
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Колонка 2: Цена -->
                        <StackPanel Grid.Column="2" Grid.Row="0"
                                    Orientation="Horizontal" Spacing="5"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Listing.Price, StringFormat='{}{0:N0}'}" 
                                       FontWeight="Bold" 
                                       FontSize="18"
                                       Foreground="#2E7D32"/>
                            <TextBlock Text="{Binding Listing.Currency.Value}" 
                                       FontSize="14"
                                       Foreground="#666"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,2"/>
                        </StackPanel>
                        
                        <!-- Название объекта -->
                        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"
                                   Text="{Binding Listing.Realty.Name}" 
                                   FontSize="14"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"/>
                        
                        <!-- Дополнительная информация -->
                        <StackPanel Grid.Column="1" Grid.Row="2"
                                    Orientation="Horizontal" Spacing="15" 
                                    Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="ID:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding Listing.Id}" FontSize="11" Opacity="0.8"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Spacing="5" 
                                        IsVisible="{Binding Listing.ResponsibleEmployee, Converter={StaticResource ObjectIsNotNullConverter}}">
                                <TextBlock Text="Ответственный:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding Listing.ResponsibleEmployee.FirstName}" 
                                           FontSize="11" 
                                           Opacity="0.8"/>
                            </StackPanel>
                            
                            <!-- Адрес -->
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="Адрес:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding Listing.Realty.Address.City}" 
                                           FontSize="11" 
                                           Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Иконка клика -->
                        <PathIcon Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"
                                  Data="M9,5V11L12,8.5M11,21H4C2.895,21 2,20.105 2,19V5C2,3.895 2.895,3 4,3H16C17.105,3 18,3.895 18,5V13H16V5H4V19H11V21Z"
                                  Width="16" Height="16"
                                  Opacity="0.6"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>