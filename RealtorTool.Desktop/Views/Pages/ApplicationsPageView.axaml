<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:RealtorTool.Desktop.ViewModels.Pages"
             xmlns:local="clr-namespace:RealtorTool.Desktop"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RealtorTool.Desktop.Views.Pages.ApplicationsPageView"
             x:DataType="pages:ApplicationsPageViewModel">
    
    <Design.DataContext>
        <pages:ApplicationsPageViewModel/>
    </Design.DataContext>
    
    <UserControl.Resources>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </UserControl.Resources>

    <ListBox ItemsSource="{Binding Listings}" 
             SelectedItem="{Binding SelectedListing}"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             Background="Transparent"
             BorderThickness="0"
             Margin="10">
        <ListBox.Styles>
            <Style Selector="ListBoxItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            <Style Selector="ListBoxItem:pointerover">
                <Setter Property="Background" Value="#F5F5F5"/>
            </Style>
            <Style Selector="ListBoxItem:selected">
                <Setter Property="Background" Value="#E3F2FD"/>
            </Style>
        </ListBox.Styles>
    
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="15" 
                        Background="White">
                    
                    <Border.Styles>
                        <Style Selector="Border:pointerover">
                            <Setter Property="BorderBrush" Value="#2196F3"/>
                        </Style>
                    </Border.Styles>
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                        <!-- Тип объявления и статус -->
                        <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="{Binding ListingType.Value}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Foreground="#1976D2"/>
                            
                            <Border Background="{Binding Status.Value, Converter={StaticResource StatusToColorConverter}}"
                                    CornerRadius="4" 
                                    Padding="6,2"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Status.Value}" 
                                           FontSize="11"
                                           FontWeight="Medium"
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Цена -->
                        <StackPanel Orientation="Horizontal" Spacing="5" Grid.Column="1" Grid.Row="0"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Price}" 
                                       FontWeight="Bold" 
                                       FontSize="18"
                                       Foreground="#2E7D32"/>
                            <TextBlock Text="{Binding Currency.Value}" 
                                       FontSize="14"
                                       Foreground="#666"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,2"/>
                        </StackPanel>
                        
                        <!-- Название объекта -->
                        <TextBlock Text="{Binding Realty.Name}" 
                                   Grid.Column="0" Grid.Row="1"
                                   FontSize="14"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>
                        
                        <!-- Дополнительная информация -->
                        <StackPanel Orientation="Horizontal" Spacing="15" 
                                    Grid.Column="0" Grid.Row="2"
                                    Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="ID:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding Id}" FontSize="11" Opacity="0.8"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="Ответственный:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding ResponsibleEmployee.FirstName}" 
                                           FontSize="11" 
                                           Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Иконка клика -->
                        <PathIcon Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"
                                  Data="M9,5V11L12,8.5M11,21H4C2.895,21 2,20.105 2,19V5C2,3.895 2.895,3 4,3H16C17.105,3 18,3.895 18,5V13H16V5H4V19H11V21Z"
                                  Width="16" Height="16"
                                  Opacity="0.6"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
