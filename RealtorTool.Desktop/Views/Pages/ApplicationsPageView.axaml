<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:RealtorTool.Desktop.ViewModels.Pages"
             xmlns:converters="clr-namespace:RealtorTool.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RealtorTool.Desktop.Views.Pages.ApplicationsPageView"
             x:DataType="pages:ApplicationsPageViewModel">
    
    <UserControl.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:ObjectIsNotNullConverter x:Key="ObjectIsNotNullConverter"/>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Border.default-image">
            <Setter Property="Background" Value="#667D7CA0"/>
            <Setter Property="BorderBrush" Value="#667D7CA0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <ListBox ItemsSource="{Binding Listings}" 
             SelectedItem="{Binding SelectedListing}"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             Background="Transparent"
             BorderThickness="0"
             Margin="10">
        
        <ListBox.Styles>
            <Style Selector="ListBoxItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            <Style Selector="ListBoxItem:pointerover">
                <Setter Property="Background" Value="BlueViolet"/>
            </Style>
            <Style Selector="ListBoxItem:selected">
                <Setter Property="Background" Value="BlueViolet"/>
            </Style>
        </ListBox.Styles>
    
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="#667D7CA0" BorderThickness="1" 
                        CornerRadius="8" Padding="15" 
                        Background="#667D7CA0">
                    
                    <Border.Styles>
                        <Style Selector="Border:pointerover">
                            <Setter Property="BorderBrush" Value="#2196F3"/>
                        </Style>
                    </Border.Styles>
                    
                    <Grid ColumnDefinitions="80,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15">
                        
                        <!-- ÐšÐ¾Ð»Ð¾Ð½ÐºÐ° 0: Ð“Ð»Ð°Ð²Ð½Ð¾Ðµ Ð¸Ð·Ð¾Ð±Ñ€Ð°Ð¶ÐµÐ½Ð¸Ðµ -->
                        <Border Grid.Column="0" Grid.RowSpan="3"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#667D7CA0"
                                Width="70" 
                                Height="70"
                                Background="#667D7CA0">
                            
                            <Panel>
                                
                                <!-- ÐŸÐ»ÐµÐ¹ÑÑ…Ð¾Ð»Ð´ÐµÑ€ (Ð²ÑÐµÐ³Ð´Ð° Ð½Ð° Ð·Ð°Ð´Ð½ÐµÐ¼ Ð¿Ð»Ð°Ð½Ðµ) -->
                                <Border Background="#F5F5F5"
                                        CornerRadius="4">
                                    <TextBlock Text="ðŸ "
                                               FontSize="24"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Opacity="0.3"/>
                                </Border>
                                
                                <!-- Ð˜Ð·Ð¾Ð±Ñ€Ð°Ð¶ÐµÐ½Ð¸Ðµ (Ð¿ÐµÑ€ÐµÐºÑ€Ñ‹Ð²Ð°ÐµÑ‚ Ð¿Ð»ÐµÐ¹ÑÑ…Ð¾Ð»Ð´ÐµÑ€ ÐºÐ¾Ð³Ð´Ð° ÐµÑÑ‚ÑŒ) -->
                                <Image Source="{Binding MainImage}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasImage}"/>
                                
                            </Panel>
                        </Border>
                        
                        <!-- ÐšÐ¾Ð»Ð¾Ð½ÐºÐ° 1: ÐžÑÐ½Ð¾Ð²Ð½Ð°Ñ Ð¸Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸Ñ -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Listing.ListingType.Value}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Foreground="#1976D2"/>
                            
                            <Border Background="{Binding Listing.Status.Value, Converter={StaticResource StatusToColorConverter}}"
                                    CornerRadius="4" 
                                    Padding="6,2"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Listing.Status.Value}" 
                                           FontSize="11"
                                           FontWeight="Medium"
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- ÐšÐ¾Ð»Ð¾Ð½ÐºÐ° 2: Ð¦ÐµÐ½Ð° -->
                        <StackPanel Grid.Column="2" Grid.Row="0"
                                    Orientation="Horizontal" Spacing="5"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Listing.Price, StringFormat='{}{0:N0}'}" 
                                       FontWeight="Bold" 
                                       FontSize="18"
                                       Foreground="#2E7D32"/>
                            <TextBlock Text="{Binding Listing.Currency.Value}" 
                                       FontSize="14"
                                       Foreground="#666"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,2"/>
                        </StackPanel>
                        
                        <!-- ÐÐ°Ð·Ð²Ð°Ð½Ð¸Ðµ Ð¾Ð±ÑŠÐµÐºÑ‚Ð° -->
                        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"
                                   Text="{Binding Listing.Realty.Name}" 
                                   FontSize="14"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"/>
                        
                        <!-- Ð”Ð¾Ð¿Ð¾Ð»Ð½Ð¸Ñ‚ÐµÐ»ÑŒÐ½Ð°Ñ Ð¸Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸Ñ -->
                        <StackPanel Grid.Column="1" Grid.Row="2"
                                    Orientation="Horizontal" Spacing="15" 
                                    Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="ID:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding Listing.Id}" FontSize="11" Opacity="0.8"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Spacing="5" 
                                        IsVisible="{Binding Listing.ResponsibleEmployee, Converter={StaticResource ObjectIsNotNullConverter}}">
                                <TextBlock Text="ÐžÑ‚Ð²ÐµÑ‚ÑÑ‚Ð²ÐµÐ½Ð½Ñ‹Ð¹:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding Listing.ResponsibleEmployee.FirstName}" 
                                           FontSize="11" 
                                           Opacity="0.8"/>
                            </StackPanel>
                            
                            <!-- ÐÐ´Ñ€ÐµÑ -->
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="ÐÐ´Ñ€ÐµÑ:" FontSize="11" Opacity="0.6"/>
                                <TextBlock Text="{Binding Listing.Realty.Address.City}" 
                                           FontSize="11" 
                                           Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Ð˜ÐºÐ¾Ð½ÐºÐ° ÐºÐ»Ð¸ÐºÐ° -->
                        <PathIcon Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"
                                  Data="M9,5V11L12,8.5M11,21H4C2.895,21 2,20.105 2,19V5C2,3.895 2.895,3 4,3H16C17.105,3 18,3.895 18,5V13H16V5H4V19H11V21Z"
                                  Width="16" Height="16"
                                  Opacity="0.6"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>