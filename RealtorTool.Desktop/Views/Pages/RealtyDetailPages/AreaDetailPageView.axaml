<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:realtyDetailPages="clr-namespace:RealtorTool.Desktop.ViewModels.Pages.RealtyDetailPages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RealtorTool.Desktop.Views.Pages.RealtyDetailPages.AreaDetailPageView"
             x:DataType="realtyDetailPages:AreaDetailPageViewModel">
    
    <Design.DataContext>
        <realtyDetailPages:AreaDetailPageViewModel/>
    </Design.DataContext>
    
    <StackPanel Spacing="6">
        <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
        <TextBlock Text="{Binding Area.Name, StringFormat='Название: {0}'}"/>
        <TextBlock Text="{Binding Area.Square, StringFormat='Площадь: {0} м²'}"/>
    </StackPanel>
</UserControl>
