<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:RealtorTool.Desktop.ViewModels.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RealtorTool.Desktop.Views.Pages.MyProfilePageView"
             x:DataType="pages:MyProfilePageViewModel">
    
    <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto, *">
        <Border Grid.Column="1" Grid.Row="1">
            <StackPanel>
                <TextBox Text="{Binding CurrentPerson.FirstName}" Margin="5" CornerRadius="5"/>
                <TextBox Text="{Binding CurrentPerson.MiddleName}" Margin="5" CornerRadius="5"/>
                <TextBox Text="{Binding CurrentPerson.LastName}" Margin="5" CornerRadius="5"/>
                <Button Content="Сохранить редактирование" Command="{Binding SaveChanges}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
